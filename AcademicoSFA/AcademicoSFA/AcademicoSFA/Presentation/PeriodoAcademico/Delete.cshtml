@page "{id:int}"
@model AcademicoSFA.Pages.PeriodoAcademico.DeleteModel
@{
    ViewData["Title"] = "Eliminar Periodo Académico";
}

<div class="row">
    <div class="col-md-12">
        <h4>
            <img alt="Imagen" src="imagenes/logoSFA.png" width="55" height="55" />
            Eliminar Periodo Académico
        </h4>
    </div>
</div>
<hr />

<div class="alert alert-danger mt-3" role="alert">
    <i class="fa-solid fa-exclamation-triangle"></i> &nbsp;
    <strong>¡Advertencia!</strong> Esta acción eliminará el periodo académico de forma permanente. Esta acción no se puede deshacer.
</div>

<div class="card">
    <div class="card-header bg-custom-header text-white">
        Detalles del Periodo Académico
    </div>
    <div class="card-body">
        <div class="row mb-2">
            <div class="col-md-3 fw-bold">
                @Html.DisplayNameFor(model => model.PeriodoAcademico.Periodo.AnioEscolar):
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.PeriodoAcademico.Periodo.AnioEscolar)
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-md-3 fw-bold">
                @Html.DisplayNameFor(model => model.PeriodoAcademico.NumeroPeriodo):
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.PeriodoAcademico.NumeroPeriodo)
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-md-3 fw-bold">
                @Html.DisplayNameFor(model => model.PeriodoAcademico.Nombre):
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.PeriodoAcademico.Nombre)
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-md-3 fw-bold">
                @Html.DisplayNameFor(model => model.PeriodoAcademico.FechaInicio):
            </div>
            <div class="col-md-9">
                @Model.PeriodoAcademico.FechaInicio.ToString("dd/MM/yyyy")
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-md-3 fw-bold">
                @Html.DisplayNameFor(model => model.PeriodoAcademico.FechaFin):
            </div>
            <div class="col-md-9">
                @Model.PeriodoAcademico.FechaFin.ToString("dd/MM/yyyy")
            </div>
        </div>
    </div>
</div>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="PeriodoAcademico.Id" />
    <button type="submit" class="btn btn-danger">
        <i class="fa-solid fa-trash"></i> &nbsp;Eliminar
    </button>
    <a asp-page="./Index" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left"></i> &nbsp;Volver
    </a>
</form>