@page
@using X.PagedList.Mvc.Core
@model AcademicoSFA.Pages.DocenteMateria.IndexModel

@{
    ViewData["Title"] = "Docente-Materias";
}
<style>
    .bg-custom-header {
        background-color: #bc2b2b;
        color: white;
    }
</style>
<div class="row mb-4 align-items-center p-3 shadow-sm rounded bg-light">
    <div class="col-auto">
        <img alt="Logo SFA" src="imagenes/logoSFA.png" width="50" height="50" class="rounded-circle border">
    </div>
    <div class="col">
        <h4 class="fw-bold text-primary mb-0">Asignación de Cargas Académicas</h4>
        <small class="text-muted">Formulario para gestionar y registrar la asignación de materias a los docentes de la institución.</small>
    </div>
</div>
<p class="mt-3">
    <a class="btn btn-success" asp-page="Create">
        <i class="fa-solid fa-plus"></i> &nbsp;Registrar Carga Académica
    </a>
</p>
<table class="table table-hover table-bordered table-striped">
    <thead class="bg-custom-header text-center">
        <tr>
            <th>DOCENTE</th>
            <th>DOCUMENTO</th>
            <th>CORREO</th>
            <th>GRADO</th>
            <th>MATERIA</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MateriasADocente)
        {
        <tr class="text-center">
                <td>@item.Nombres</td>
                <td>@item.Documento</td>
                <td>@item.Correo</td>
                <td>@item.Grado</td>
                <td>@item.Materia</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-secondary">
                        <i class="fa-solid fa-pen-square"></i>&nbsp;Modificar
                    </a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="fa-solid fa-trash"></i>&nbsp;Eliminar
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
