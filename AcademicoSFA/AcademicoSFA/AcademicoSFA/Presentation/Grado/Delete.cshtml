@page
@model AcademicoSFA.Pages.Grado.DeleteModel

@{
    ViewData["Title"] = "¿Desea eliminar el grado " + Model.Grado.NomGrado + " ?";
}
<div class="row">
    <div class="col-md-12">
        <h4>
            <img alt="Imagen" src="../imagenes/logoSFA.png" width="55" height="55" />
            Eliminar grado
        </h4>
    </div>
</div>
<hr />
<div class="card-body">
    <div class="alert alert-info mt-3" role="alert">
        <i class="fa-solid fa-info-circle"></i> &nbsp;Formulario para cambiar de estado a "Inactivo".
    </div>
    <h3>@ViewData["Title"]</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Grado.NomGrado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Grado.NomGrado)
            </dd>
        </dl>
    </div>
</div>
<div class="card-footer">
    <form method="post">
        <input type="hidden" asp-for="Grado.Id" />
        <Button type="submit" class="btn btn-danger me-3">
            <i class="fa-solid fa-trash"></i>&nbsp;Eliminar
        </Button> |
        <a asp-page="./Index" class="btn btn-secondary">
            <i class="fa-solid fa-circle-arrow-left"></i>&nbsp;Regresar
        </a>
    </form>
</div>

