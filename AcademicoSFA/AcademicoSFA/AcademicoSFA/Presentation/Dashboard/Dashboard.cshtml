@page
@model AcademicoSFA.Pages.DashboardModel
@using System.Security.Claims
@{
    ViewData["Title"] = "Panel de Control Académico";
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value ?? "Invitado";
    var isEstudiante = userRole == "ESTUDIANTE";
    var isDocente = userRole == "DOCENTE";
    var isAdmin = userRole == "ADMIN" || userRole == "Directivo";
    var nombreUsuario = User.FindFirst(ClaimTypes.Name)?.Value ?? "Usuario";
}

<div class="container-fluid px-4 py-5">
    <!-- Encabezado con logo y título -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div class="d-flex align-items-center">
            <img src="/imagenes/logoSFA.png" alt="Logo SFA" class="me-3" style="max-height: 60px;">
            <div>
                <h1 class="h3 mb-0 text-primary">Sistema Académico SFA</h1>
                <p class="text-muted mb-0">@(isEstudiante ? "Portal Estudiantil" : isDocente ? "Portal Docente" : "Gestión académica integral")</p>
            </div>
        </div>
        <div class="d-flex align-items-center">
            <span class="badge bg-info me-3">Periodo actual: 2025-I</span>
            <div class="dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user-circle me-1"></i> @nombreUsuario
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Mi perfil</a></li>
                    <li><a class="dropdown-item" href="/Password/CambiarContrasenaModel"><i class="fas fa-key me-2"></i>Cambiar contraseña</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/InicioSesion/Logout"><i class="fas fa-sign-out-alt me-2"></i>Cerrar sesión</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Tarjetas de acceso rápido según el rol -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white">
                    <h5 class="mb-0">@(isEstudiante ? "Mi Portal Estudiantil" : isDocente ? "Portal Docente" : "Módulos principales")</h5>
                </div>
                <div class="card-body">
                    @if (isEstudiante)
                    {
                        <!-- Vista de Estudiante -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body">
                                        <h6 class="card-title text-primary">
                                            <i class="fas fa-user-graduate me-2"></i>Mi Perfil Académico
                                        </h6>
                                        <div class="list-group list-group-flush">
                                            <a href="/ConsultaNotas/Index" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-search me-2 text-muted"></i>Consultar mis calificaciones
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else if (isDocente)
                    {
                        <!-- Vista de Docente -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body">
                                        <h6 class="card-title text-primary">
                                            <i class="fas fa-chalkboard-teacher me-2"></i>Gestión Académica
                                        </h6>
                                        <div class="list-group list-group-flush">
                                            <a href="/RegistroNotas/Upload" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-file-upload me-2 text-muted"></i>Registro de Notas
                                            </a>
                                            <a href="/ConsultaNotas/Index" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-search me-2 text-muted"></i>Consulta de Notas
                                            </a>
                                            <a href="#" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-users me-2 text-muted"></i>Mis grupos asignados
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body">
                                        <h6 class="card-title text-success">
                                            <i class="fas fa-book me-2"></i>Mis Materias
                                        </h6>
                                        <div class="list-group list-group-flush">
                                            <a href="#" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-clipboard-list me-2 text-muted"></i>Materias asignadas
                                            </a>
                                            <a href="#" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-calendar-alt me-2 text-muted"></i>Horario docente
                                            </a>
                                            <a href="#" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-calendar-day me-2 text-muted"></i>Calendario académico
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Vista de Administrador y otros roles -->
                        <div class="row g-3">
                            <!-- Gestión Académica -->
                            <div class="col-md-4">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body">
                                        <h6 class="card-title text-primary">
                                            <i class="fas fa-graduation-cap me-2"></i>Gestión Académica
                                        </h6>
                                        <div class="list-group list-group-flush">
                                            <a href="/Alumno/Index" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-user-graduate me-2 text-muted"></i>Alumnos
                                            </a>
                                            <a href="/Grado/Index" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-layer-group me-2 text-muted"></i>Grados
                                            </a>
                                            <a href="/GrupoAcad/Index" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-users me-2 text-muted"></i>Grupos Académicos
                                            </a>
                                            <a href="/Materia/Index" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-book me-2 text-muted"></i>Materias
                                            </a>
                                            <a href="/GrupoMateria/Index" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-bookmark me-2 text-muted"></i>Materias por Grupo
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Gestión Docente -->
                            <div class="col-md-4">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body">
                                        <h6 class="card-title text-success">
                                            <i class="fas fa-chalkboard-teacher me-2"></i>Gestión Docente
                                        </h6>
                                        <div class="list-group list-group-flush">
                                            <a href="/Participante/Index" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-user-tie me-2 text-muted"></i>Docentes
                                            </a>
                                            <a href="/DocenteMateria/Index" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-clipboard-list me-2 text-muted"></i>Asignación de Materias
                                            </a>
                                            <a href="/RegistroNotas/Upload" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-file-upload me-2 text-muted"></i>Registro de Notas
                                            </a>
                                            <a href="/ConsultaNotas/Index" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-search me-2 text-muted"></i>Consulta de Notas
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Gestión Administrativa -->
                            <div class="col-md-4">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body">
                                        <h6 class="card-title text-warning">
                                            <i class="fas fa-cogs me-2"></i>Gestión Administrativa
                                        </h6>
                                        <div class="list-group list-group-flush">
                                            <a href="/Matricula/Index" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-clipboard-check me-2 text-muted"></i>Matrículas
                                            </a>
                                            <a href="/Pago/Index" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-money-bill-wave me-2 text-muted"></i>Pagos
                                            </a>
                                            <a href="/Periodo/Index" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-calendar-alt me-2 text-muted"></i>Años Lectivos
                                            </a>
                                            <a href="/PeriodoAcademico/Index" class="list-group-item list-group-item-action border-0">
                                                <i class="fas fa-calendar-day me-2 text-muted"></i>Periodos Académicos
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Sección para Estudiantes -->
    @if (isEstudiante)
    {
        <!-- Información del estudiante -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Mi información académica</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="card bg-light border-0">
                                    <div class="card-body p-3">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                                                <i class="fas fa-graduation-cap text-success"></i>
                                            </div>
                                            <div>
                                                <p class="text-muted mb-0">Grado/Grupo</p>
                                                <h4 class="mb-0">10-A</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-light border-0">
                                    <div class="card-body p-3">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
                                                <i class="fas fa-book text-warning"></i>
                                            </div>
                                            <div>
                                                <p class="text-muted mb-0">Estado</p>
                                                <h4 class="mb-0">Activo</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    
    <!-- Sección para estadísticas (visible solo para admin y docentes) -->
    @if (!isEstudiante)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Resumen del sistema</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <div class="card bg-light border-0">
                                    <div class="card-body p-3">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                                                <i class="fas fa-user-graduate text-primary"></i>
                                            </div>
                                            <div>
                                                <p class="text-muted mb-0">Alumnos</p>
                                                <h4 class="mb-0">450</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-light border-0">
                                    <div class="card-body p-3">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                                                <i class="fas fa-chalkboard-teacher text-success"></i>
                                            </div>
                                            <div>
                                                <p class="text-muted mb-0">Docentes</p>
                                                <h4 class="mb-0">120</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-light border-0">
                                    <div class="card-body p-3">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
                                                <i class="fas fa-book text-warning"></i>
                                            </div>
                                            <div>
                                                <p class="text-muted mb-0">Materias</p>
                                                <h4 class="mb-0">30</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-light border-0">
                                    <div class="card-body p-3">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-danger bg-opacity-10 p-3 me-3">
                                                <i class="fas fa-users text-danger"></i>
                                            </div>
                                            <div>
                                                <p class="text-muted mb-0">Grupos</p>
                                                <h4 class="mb-0">25</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Notificaciones y acciones rápidas adaptadas al rol -->
    <div class="row">
        @if (isEstudiante)
        {
            <!-- Vista de estudiante -->
            <div class="col-md-8 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Anuncios importantes</h5>
                        <span class="badge bg-primary">2 nuevos</span>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            <div class="list-group-item border-start-0 border-end-0">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Entrega de boletines</h6>
                                    <small class="text-muted">Hace 2 días</small>
                                </div>
                                <p class="mb-1">La entrega de boletines del periodo actual será el 15 de diciembre.</p>
                            </div>
                            <div class="list-group-item border-start-0 border-end-0">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Evaluaciones finales</h6>
                                    <small class="text-muted">Hace 1 semana</small>
                                </div>
                                <p class="mb-1">Las evaluaciones finales se realizarán del 1 al 10 de diciembre. Consulta el calendario detallado.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Acciones rápidas</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/ConsultaNotas/Index" class="btn btn-primary">
                                <i class="fas fa-search me-2"></i>Consultar mis notas
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (isDocente)
        {
            <!-- Vista de docente -->
            <div class="col-md-8 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Comunicados docentes</h5>
                        <span class="badge bg-primary">3 nuevos</span>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            <div class="list-group-item border-start-0 border-end-0">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Entrega de notas</h6>
                                    <small class="text-muted">Hace 3 días</small>
                                </div>
                                <p class="mb-1">Se recuerda a los docentes que la fecha límite para el registro de notas es el 30 de noviembre.</p>
                            </div>
                            <div class="list-group-item border-start-0 border-end-0">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Reunión académica</h6>
                                    <small class="text-muted">Hace 1 semana</small>
                                </div>
                                <p class="mb-1">La próxima reunión del consejo académico será el viernes 25 de noviembre a las 14:00 horas.</p>
                            </div>
                            <div class="list-group-item border-start-0 border-end-0">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Capacitación docente</h6>
                                    <small class="text-muted">Hace 2 semanas</small>
                                </div>
                                <p class="mb-1">Se realizará una capacitación sobre nuevas estrategias didácticas el 27 de noviembre.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Acciones rápidas</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/RegistroNotas/Upload" class="btn btn-primary">
                                <i class="fas fa-file-upload me-2"></i>Registrar notas
                            </a>
                            <a href="/ConsultaNotas/Index" class="btn btn-success">
                                <i class="fas fa-search me-2"></i>Consultar notas
                            </a>
                            <a href="#" class="btn btn-info">
                                <i class="fas fa-users me-2"></i>Mis grupos
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Vista de administrador y otros roles -->
            <div class="col-md-8 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Notificaciones</h5>
                        <span class="badge bg-primary">3 nuevas</span>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            <div class="list-group-item border-start-0 border-end-0">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Cierre de inscripciones</h6>
                                    <small class="text-muted">Hace 3 días</small>
                                </div>
                                <p class="mb-1">Las inscripciones para el próximo periodo académico cierran el 15 de diciembre.</p>
                            </div>
                            <div class="list-group-item border-start-0 border-end-0">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Entrega de notas</h6>
                                    <small class="text-muted">Hace 1 semana</small>
                                </div>
                                <p class="mb-1">Se recuerda a los docentes que la fecha límite para el registro de notas es el 30 de noviembre.</p>
                            </div>
                            <div class="list-group-item border-start-0 border-end-0">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Actualización del sistema</h6>
                                    <small class="text-muted">Hace 2 semanas</small>
                                </div>
                                <p class="mb-1">El sistema fue actualizado con nuevas funcionalidades para la gestión de periodos académicos.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Acciones rápidas</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/Matricula/Create" class="btn btn-primary">
                                <i class="fas fa-user-plus me-2"></i>Nueva matrícula
                            </a>
                            <a href="/RegistroNotas/Upload" class="btn btn-success">
                                <i class="fas fa-file-upload me-2"></i>Registrar notas
                            </a>
                            <a href="/ConsultaNotas/Index" class="btn btn-info">
                                <i class="fas fa-search me-2"></i>Consultar notas
                            </a>
                            <a href="/Pago/Create" class="btn btn-warning">
                                <i class="fas fa-money-bill-wave me-2"></i>Registrar pago
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Asegúrate de incluir Font Awesome para los iconos -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<!-- Asegúrate de incluir Bootstrap JS para el dropdown del usuario -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>

<!-- Estilos adicionales -->
<style>
    body {
        background-color: #f8f9fa;
    }
    .card {
        border-radius: 0.5rem;
        transition: transform 0.2s;
    }
    .card:hover {
        transform: translateY(-3px);
    }
    .list-group-item-action:hover {
        background-color: #f8f9fa;
    }
    .rounded-circle {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>