@page
@model AcademicoSFA.Pages.Alumno.EditModel

@{
    ViewData["Title"] = "Editar";
}
<div class="row">
    <div class="col-md-12">
        <h4>
            <img alt="Imagen" src="../imagenes/logoSFA.png" width="35" height="35" />
            Actualizar estudiantes
        </h4>
    </div>
</div>
<hr />
<div class="alert alert-info mt-3" role="alert">
    <i class="fa-solid fa-info-circle"></i> &nbsp;Formulario para actualizar estudiantes.
</div>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Alumno.Codigo" />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Participantes.Nombre" class="control-label"></label>
                <input asp-for="Participantes.Nombre" class="form-control" />
                <span asp-validation-for="Participantes.Nombre" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Participantes.Apellido" class="control-label"></label>
                <input asp-for="Participantes.Apellido" class="form-control" />
                <span asp-validation-for="Participantes.Apellido" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Alumno.Codigo" class="control-label"></label>
                <input asp-for="Alumno.Codigo" class="form-control" readonly="readonly" />
                <span asp-validation-for="Alumno.Codigo" class="text-danger"></span>
            </div>
        </div>
    </div>

    <br />
    <div class="row">
        <div class="col-md-3">
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-floppy-disk"></i>&nbsp;Actualizar
                </button>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="fa-solid fa-circle-arrow-left"></i>&nbsp;Regresar
                </a>
            </div>
        </div>
    </div>

</form>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
