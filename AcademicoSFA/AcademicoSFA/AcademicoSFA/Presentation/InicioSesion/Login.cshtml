@page
@model AcademicoSFA.Pages.InicioSesion.LoginModel
@{
    Layout = null;  // Usamos un layout vacío para un diseño limpio
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de Sesión</title>

    <!-- Incluye Bootstrap para un diseño profesional -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #e9ecef;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: 'Arial', sans-serif;
        }

        .login-container {
            max-width: 400px;
            padding: 30px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.2);
        }

            .login-container:hover {
                box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.4);
            }

            .login-container .logo {
                text-align: center;
                margin-bottom: 20px;
            }

                .login-container .logo img {
                    max-width: 150px;
                }

            .login-container h2 {
                text-align: center;
                margin-bottom: 20px;
                color: #343a40;
            }

            .login-container .form-group {
                margin-bottom: 15px;
            }

            .login-container .btn {
                width: 100%;
                margin-bottom: 10px;
            }

        .alert {
            margin-top: 10px;
        }

        /* Estilos para el botón de Google */
        .google-btn {
            width: 100%;
            background-color: white;
            color: #757575;
            border: 1px solid #ddd;
            padding: 10px;
            border-radius: 4px;
            font-weight: bold;
            margin-top: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            transition: background-color 0.3s;
        }

            .google-btn:hover {
                background-color: #f1f1f1;
                text-decoration: none;
            }

            .google-btn img {
                margin-right: 10px;
                width: 20px;
                height: 20px;
            }

        .divider {
            text-align: center;
            margin: 15px 0;
            position: relative;
        }

            .divider:before {
                content: "";
                position: absolute;
                top: 50%;
                left: 0;
                width: 45%;
                height: 1px;
                background: #ddd;
            }

            .divider:after {
                content: "";
                position: absolute;
                top: 50%;
                right: 0;
                width: 45%;
                height: 1px;
                background: #ddd;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="logo">
            <img src="../imagenes/logoSFA.png" alt="Logo AcademicoSFA" /> <!-- Ruta del logo -->
        </div>
        <h2>Iniciar sesión</h2>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i> @Model.ErrorMessage
            </div>
        }

        <!-- Botón de inicio de sesión con Google -->
        <form method="post" asp-page-handler="GoogleLogin">
            <button type="submit" class="google-btn">
                <img src="https://cdn-icons-png.flaticon.com/512/2991/2991148.png" alt="Google" />
                Iniciar sesión con Google
            </button>
        </form>

        <div class="divider">O</div>

        <!-- Formulario de inicio de sesión tradicional -->
        <form method="post" asp-page-handler="Login">
            <div class="form-group">
                <label for="Email">Correo electrónico</label>
                <input type="email" class="form-control" id="Email" name="Input.Email" required />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Password">Contraseña</label>
                <input type="password" class="form-control" id="Password" name="Input.Clave" required />
                <span asp-validation-for="Input.Clave" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="RememberMe" />
                <label class="form-check-label" for="RememberMe">Recordarme</label>
            </div>
            <button type="submit" class="btn btn-primary">Iniciar sesión</button>
        </form>
        <!-- Enlaces para recuperar contraseña y crear primera contraseña -->
        <div class="additional-options">
            <a href="/Password/OlvideContrasenaModel">¿Olvidaste tu contraseña?</a>
            <a href="/Password/PrimeraContrasenaModel">Primera vez</a>
        </div>
        <!-- Scripts de validación para mostrar errores en tiempo real -->
        <partial name="_ValidationScriptsPartial" />
    </div>

    <!-- Script para Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>