@page
@model AcademicoSFA.Pages.GrupoDoc.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Grupo Docente</h1>

<h3>¿Estás seguro de que deseas eliminar este grupo docente?</h3>
<div>
    <h4>Grupo Docente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Docente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GrupoDocente.Participante.Nombre) @Html.DisplayFor(model => model.GrupoDocente.Participante.Apellido)
        </dd>
        <dt class="col-sm-2">
            Grupo Académico
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GrupoDocente.GrupoAcad.Grado.NomGrado) - @Html.DisplayFor(model => model.GrupoDocente.GrupoAcad.NomGrupo)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="GrupoDocente.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver a la lista</a>
    </form>
</div>

