@page
@using X.PagedList.Mvc.Core
@model AcademicoSFA.Pages.GrupoAcad.IndexModel

@{
    ViewData["Title"] = "Gestión Acad";
    Layout = "_Layout";
}
<style>
    .bg-custom-header {
        background-color: #bc2b2b;
        color: white;
    }
</style>
<!-- Cabecera principal -->
<div class="row mb-4 align-items-center p-3 shadow-sm rounded bg-light header-container">
    <div class="col-auto">
        <img alt="Logo SFA" src="~/imagenes/logoSFA.png" width="50" height="50" class="rounded-circle border">
    </div>
    <div class="col">
        <h4 class="fw-bold text-primary mb-0">Gestión de grupos académicos</h4>
        <small class="text-muted">  &nbsp;Formulario para la gestión de grupos académicos de la institución.</small>
    </div>
</div>
<p class="mt-3">
    <a class="btn btn-success" asp-page="Create">
        <i class="fa-solid fa-plus"></i> &nbsp;Crear Grupo
    </a>
</p>
<table class="table table-hover table-bordered table-striped">
    <thead class="bg-custom-header text-center">
        <tr>
            <th>GRADO</th>
            <th>GRUPO</th>
            <th>AÑO ESCOLAR</th>
            <th>ACCIONES</th>
        </tr>
    <tbody class="text-center">
            @foreach (var item in Model.GrupoAcad)
            {
            <tr>
                <td>
                        @Html.DisplayFor(modelItem => item.Grado.NomGrado)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.NomGrupo)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Periodo.AnioEscolar)
                </td>
                <td class="text-center">
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-secondary">
                        <i class="fa-solid fa-pen-square"></i>&nbsp;Modificar
                    </a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="fa-solid fa-trash"></i>&nbsp;Eliminar
                    </a>
                </td>

            </tr>
            }
    </tbody>
</table>

<!-- Controles de paginación -->
<div class="pagination">
    @Html.PagedListPager(Model.GrupoAcad, page => Url.Page(null, new { Pagina = page, TerminoBusqueda = Model.TerminoBusqueda }),
            new PagedListRenderOptions
    {
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" }
    }
            )
</div>
