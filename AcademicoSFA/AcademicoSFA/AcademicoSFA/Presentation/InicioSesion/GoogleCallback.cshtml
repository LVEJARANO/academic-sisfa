@page
@model AcademicoSFA.Pages.InicioSesion.GoogleCallbackModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Procesando autenticación</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #e9ecef;
            font-family: 'Arial', sans-serif;
        }
        .loading-container {
            text-align: center;
            padding: 30px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .spinner-border {
            width: 3rem;
            height: 3rem;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="loading-container">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <h3>Procesando tu inicio de sesión...</h3>
        <p>Serás redirigido automáticamente.</p>
    </div>

    <script>
        // Este script mostrará la pantalla de carga por un momento y luego
        // dejará que el controlador maneje la redirección
        setTimeout(function() {
            // No hacemos nada, ya que la redirección la maneja el controlador
        }, 1500);
    </script>
</body>
</html>