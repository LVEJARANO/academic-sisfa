@page
@model AcademicoSFA.Pages.Grado.IndexModel

@{
    ViewData["Title"] = "Grado";
    Layout = "_Layout";
}
<style>
    .bg-custom-header {
        background-color: #bc2b2b;
        color: white;
    }
</style>
<!-- Cabecera principal -->
<div class="row mb-4 align-items-center p-3 shadow-sm rounded bg-light header-container">
    <div class="col-auto">
        <img alt="Logo SFA" src="~/imagenes/logoSFA.png" width="50" height="50" class="rounded-circle border">
    </div>
    <div class="col">
        <h4 class="fw-bold text-primary mb-0">Gestión de grados</h4>
        <small class="text-muted">  &nbsp;Formulario para la gestión de grados.</small>
    </div>
</div>
<div class="container-fluid">
    <p class="text-end">
        @Model.Grado.Count Registros
    </p>
    <p class="mt-3">
        <a class="btn btn-success" asp-page="Create">
            <i class="fa-solid fa-plus"></i> &nbsp;Crear Grado
        </a>
    </p>
    <table class="table table-hover table-bordered table-striped">
        <thead class="bg-custom-header text-center">
            <tr>
                <th>
                    GRADO
                </th>
                <th>ACCIONES</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Grado)
            {
                <tr>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.NomGrado)
                    </td>
                    <td class="text-center">
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-secondary">
                            <i class="fa-solid fa-pen-square"></i>&nbsp;Modificar
                        </a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="fa-solid fa-trash"></i>&nbsp;Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>



</div>

